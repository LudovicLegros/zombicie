{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}
{% block upperheader %}
<div class="header_image">
    <img src="{{asset('images/background_village.jpg')}}" alt="">
</div>
{% endblock %}
{% block body %}
    <h1>Bonjour aventurier(e) 
        {% if app.user %} 
        {{app.user.username}}
        {% endif %} 
        {% set toto = 1%}
    </h1>
    <section id="home">
       
        {# --------------LOOP FOR TABLE---------- #}
        {% for table in tables %}
        <div class="table">
            <div>
                <h2>{{table.tableName}}</h2>
                <p>Le {{table.date|date("d/m/Y")}}</p>
            </div>
            
            {# --------------LOOP FOR PROFIL---------- #}
            {% for profil in table.profils %}
            <div>        
                {{profil.player}}
                {% if app.user.username ==  profil.player %}
                {% endif %}
            </div>
                
                
            {% endfor %}
            {# --------VERIFIER SI LE USER EXISTE DANS LA TABLE------- #}
            {% set flag ='' %}
            {% for profil in table.profils %} 
                {% if profil.player == app.user.username and flag !=1 %}
                    <a class="join_btn" href="{{ path('join_table',{'id' : table.id}) }}">Rejoindre la table</a>
                    {% set flag = 1 %}
                {% endif %}
            {% endfor %}
            <a href="{{ path('detail_table',{'id' : table.id}) }}">Voir la table en d√©tails</a>

        </div>
        {% endfor %}
    </section>
{% endblock %}
